ifeq ($(strip ${HAVEQIO}),true)
  G_OBJECTS += io_scidac.o io_scidac_types.o
endif

G_KS_OBJECTS = \
  ks_utilities.o \
  mat_invert_u1.o \
  rephase_u1.o \
  f_meas_u1.o \
  grsource_imp_u1.o 
	
